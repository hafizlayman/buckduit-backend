# backend/.env.example
# ===== App =====
PORT=5000
FLASK_ENV=development
APP_ENV=dev            # dev | stage | prod
APP_MODE=mock          # mock | real

# ===== Supabase =====
SUPABASE_URL=
SUPABASE_SERVICE_KEY=
SUPABASE_ANON_KEY=

# ===== Worker / Sync =====
SYNC_SCOPE=default
SYNC_INTERVAL_SECONDS=60
SYNC_STATUS_TABLE=sync_status
SYNC_DELTAS_TABLE=sync_deltas
SYNC_HEALTH_GREEN=120
SYNC_HEALTH_YELLOW=300

# ===== Watchdog =====
WATCHDOG_INTERVAL_SECONDS=120
BIAS_THRESHOLD=0.12
PREDICTIVE_ALERTS_TABLE=predictive_alerts

# ===== Optional Telegram (leave blank to disable) =====
TELEGRAM_TOKEN=
TELEGRAM_CHAT_ID=
